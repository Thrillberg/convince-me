{
    "env": {
        "browser": "true",
        "node": "true",
        "mocha": "true"
    },
    "globals": {
        "document": "false",
        "sinon": "true"
    },
    "extends": "airbnb",
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "rules": {
        "no-undef": 0,
        "react/react-in-jsx-scope": 0,
        "react/prefer-stateless-function": 0,
        "react/no-children-prop": 0
    }
}
